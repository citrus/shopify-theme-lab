{
  "name": "shopify-theme-lab",
  "description": "Customizable modular development environment for blazing-fast Shopify theme creation",
  "author": "Sergej Samsonenko",
  "version": "4.4.1",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "run-p -sr shopify:serve vite:dev",
    "deploy": "",
    "deploy:new": ".. shopify theme push --unpublished",
    "shopify:serve": "cd shopify && shopify theme serve",
    "shopify:pull": "cd shopify && shopify theme pull",
    "lint": "",
    "vite:dev": "vite dev",
    "vite:build": "VITE_USER_NODE_ENV=production vite build"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "pinia": "^2.0.29",
    "vite": "^4.0.4",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.13",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  }
}
